@model ParveenEvent.Models.UserProfile

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <style>

        body {
            background-color: #1b1b1b;
            padding-top: 40px;
        }


        .input-group-addon {
            background-color: rgb(50, 118, 177);
            border-color: rgb(40, 94, 142);
            color: rgb(255, 255, 255);
        }

        .form-control:focus {
            background-color: rgb(50, 118, 177);
            border-color: rgb(40, 94, 142);
            color: rgb(255, 255, 255);
        }

        .form-signup input[type="text"], .form-signup input[type="password"] {
            border: 1px solid rgb(50, 118, 177);
        }
    .jumbotron { 
        background-image: url('https://www.parveentravels.com/parveen-travels/assets/parveen/images/new/offers/offer_1.jpg');
                 background-size: cover;
                 background-repeat: no-repeat;
                 width:100%;
    } 
    </style>
</head>
<body>
    <div class="container">
        @using (Html.BeginForm("Login", "Home", FormMethod.Post))
    {

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @* @if (@ViewBag.Message != null)
            {
                <div style="border: 1px solid red">
                    @ViewBag.Message
                </div>
        }*@
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="jumbotron">
                          

                        </div>
                        <h5 class="text-center">
                            Login
                        </h5>

                        <div class="form-group">
                            <div class="input-group" style="padding-left: 20%;">
                                <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                                <span >@Html.TextBoxFor(a => a.UserName)</span>
                                <span>@Html.ValidationMessageFor(a => a.UserName)</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group"  style="padding-left: 20%;">
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-lock"></span>
                                </span>
                                <span  >
                                    @Html.PasswordFor(a => a.Password)
                                </span>
                                <span>
                                    @Html.ValidationMessageFor(a => a.Password)
                                </span>
                            </div>
                        </div>

                    </div>

                    <input type="submit" class="btn btn-sm btn-primary btn-block" value="Login" />
                </div>
            </div>
        </div>



}
    </div>


</body>
</html>
